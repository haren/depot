<tr>
	<td><%= line_item.quantity %>&times;</td>
	<td><%= line_item.product.title %></td>
	<td class="item_price" >
	<% if params[:locale] == "en" %>
		<%= number_to_currency(line_item.total_price) %>
	<% else %>
		<%= number_to_currency(line_item.total_price * 0.72) %>
	<% end %>
	</td>
	<td> <% unless email_being_sent %>
				<%= button_to t('.remove_html'), line_item, :method => :delete, :confirm => 'Are you sure?', :disabled => @order.present? %>
			 <% end %> </td>
</tr>





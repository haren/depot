<div class="cart_title" >Your Cart</div>
<table>
	<%= render cart.line_items, :email_being_sent => false %>
	<tr class="total_line" >
		<td colspan="2" >Total</td>
		<td class="total_cell" ><%= number_to_currency(cart.total_price) %></td>
	</tr>
</table>

<%= button_to "Checkout", new_order_path, :method => :get, :disabled => (@order.present? or @cart.line_items.empty?) %>
<%= button_to 'Empty cart', cart, :method => :delete,
:confirm => 'Are you sure?', :disabled => (@order.present? or @cart.line_items.empty?) %>


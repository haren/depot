<div class="cart_title" ><%= t('.title') %></div>
<table>
	<%= render cart.line_items, :email_being_sent => false %>
	<tr class="total_line" >
		<td colspan="2" >Total</td>
		<td class="total_cell" >
		<% if params[:locale] == "en" %>
			<%= number_to_currency(cart.total_price) %>
		<% else %>
			<%= number_to_currency(cart.total_price * 0.72) %>
		<% end %>
		</td>
	</tr>
</table>

<%= button_to t('.checkout'), new_order_path, :method => :get, :disabled => (@order.present? or @cart.line_items.empty?) %>
<%= button_to t('.empty'), cart, :method => :delete,
:confirm => 'Are you sure?', :disabled => (@order.present? or @cart.line_items.empty?) %>

